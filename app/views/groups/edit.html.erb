<%= render 'home' %>

<% if is_owner() %>


<h1>Editing Group: <%= @group.name %> </h1>

<% if !@owners.nil? %>
	Owner(s): 
	<% @owners.each do |o| %> 
		<%= Person.find(o.person_id).name %>  | 
	<% end %>
<% end %>

<%= form_for @group do |f| %>
	<p> 
		<%= f.label :name %>
		<%= f.text_field :name %> <br />
	</p>

	<p> 
	Add New Owner: <%= select_tag "owners", options_from_collection_for_select(@users, "id", "name"), :include_blank => 'User...' %>
	</p>

	<p> 
	Add New Member: <%= select_tag "members", options_from_collection_for_select(@users, "id", "name"), :include_blank => 'User...' %>
	</p>

	<h3>People </h3>
	<table>
		<tr>
			<th> Name </th>
			<th> Role </th>
			<th> Remove </th>
		</tr>
	<% if !@memberships.nil? %>
	<% @memberships.each do |m| %>
			<tr> 
				<% @person = Person.find(m.person_id) %>
				<td> <%= @person.name %></td>

				<td> <%= select_tag "role" + @person.id.to_s, options_for_select([ "owner", "member" ], m.role) %> </td> 

				<td> <%= link_to 'Remove from group', :controller => 'groups', :action => 'remove_member', :m_id => m.id %></td>
			</tr>
		<% end %>
	<% end %>
		


	</table>
	<p> <%= f.submit %> </p>
	<% end %>


<br/>

Invite by Email (existing users only)

<%= form_tag({:controller=>'invites', :action => 'email_invite'}, {:name => 'email_invite'}) do %>
	<%= hidden_field_tag :group_id, @id %>
	<%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= submit_tag 'Submit' %>
<% end %>


<br/>

<% @i = Invite.find_by(group_id: @id) %>
<% if @i %>
	<%= label_tag 'Invite Link' %>
	<%= text_field_tag "Invite Link:", welcome_index_path(:invite_token => @i.token), {:size =>40, :class => 'copy-link' }%>
	<%= button_tag 'Copy', {:class =>'copy-button'}%>

<% else %>

	<%= form_for @invite , :url => invites_path do |f| %>
	    <%= f.hidden_field :group_id, :value => @id %>
	<%= f.label 'Invite Link' %>    
	<%= f.submit 'Generate'%>
	<% end %>
<% end %>

<br/>
<p></p>

<h3> Current Documents: <br/> </h3>
 
<% if !@documents.blank? %>
	<% for item in @documents %>
		<%= link_to item.title, :controller=> 'documents', :action => 'show', :id=> item.id %> <br/>
<% end %>

<% else %>
	<p> no documents found </p>

<% end %>


<% else %>

<p class = "permissionError"> You do not have permission to view this page </p>

<% end %>

<p></p>

<%= link_to 'Show', @group %> |
<%= link_to 'Back', group_path %>

<script>
	//for invite link copy to clipboard
	//source: https://stackoverflow.com/questions/400212/how-do-i-copy-to-the-clipboard-in-javascript

	var copyButton = document.querySelector('.copy-button');

	copyButton.addEventListener('click', function(event){

		var copyLink = document.querySelector('.copy-link');
		copyLink.focus();
		copyLink.select();

		try{
			var successful = document.execCommand('copy');
			var msg = successful ? 'successful' : 'unsuccessful';
			console.log(msg);
		} catch (err){
			console.log('unable to copy')
		}

	});

</script>