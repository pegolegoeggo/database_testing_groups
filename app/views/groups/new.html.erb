Enter new group info

<%= form_for @group do |f| %>
	<p> 
		<%= f.label :group %>
		<%= f.text_field :name %> <br />
	</p>

	<p>
		<%= f.submit %>

	</p>
<% end %>

<h3> Recently created groups: <br/> </h3>
 
<% if !@groups.blank? %>
	<% for item in @groups %>
		<%= link_to item.name, :controller => 'groups', :action => 'show', :id => item.id %> <br/>
	<% end %>

<% else %>
	<p> no groups found </p>

<% end %>






