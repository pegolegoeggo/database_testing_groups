Welcome! please sign up. 

<%= form_for @user do |f| %>
	<p> 
		<%= f.label "Name" %>
		<%= f.text_field :name %> <br />
	</p>

	<p> 
		<%= f.label "email" %>
		<%= f.text_field :email %> <br />
	</p>

	<p>
		<%= f.submit %>

	</p>
<% end %>

Current Users: <br/>
 
<% if !@users.blank? %>
	<% for item in @users %>
		<%= link_to item.name, :controller => 'users', :action => 'show', :id => item.id %> <br/>
<% end %>

<% else %>
	<p> no users found </p>

<% end %>